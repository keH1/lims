[mysqld]

# General settings
default-time-zone="+03:00"
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci
bind-address=0.0.0.0  # Allow connections from other containers
sql_mode="STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION"

# InnoDB settings
innodb_file_per_table=1
innodb_flush_log_at_trx_commit=2
innodb_flush_method=O_DIRECT
innodb_buffer_pool_size=2G  # 25% of 8GB, leaves room for PHP-FPM, Nginx, Memcached
innodb_log_file_size=256M
innodb_thread_concurrency=0  # Auto-detect (4 cores)

# Binary logging
sync_binlog=1000  # Balance performance and durability
binlog_cache_size=1M

# Transaction settings
transaction-isolation=READ-COMMITTED

# Performance settings
join_buffer_size=1M
read_rnd_buffer_size=512K
tmp_table_size=32M
max_heap_table_size=32M
thread_cache_size=20
table_open_cache=2000

# MariaDB-specific settings
aria_pagecache_buffer_size=64M  # Smaller for dev environment

# Logging for development
slow_query_log=1
slow_query_log_file=/var/log/mysql/slow.log
long_query_time=1
general_log=1
general_log_file=/var/log/mysql/general.log